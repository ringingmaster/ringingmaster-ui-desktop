<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       default-autowire="byName"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">



    <!-- Property Windows -->
    <bean id="propertyWindow" class="com.concurrentperformance.fxutils.tab.InjectableTabPane">
        <property name="tabDefinitions">
            <list>
                <bean class="com.concurrentperformance.fxutils.tab.TabDefinition"
                        c:name="Setup"
                        c:node-ref="propertyWindow.setup"/>
                <bean class="com.concurrentperformance.fxutils.tab.TabDefinition"
                      c:name="Methods"
                      c:node-ref="propertyWindow.notation"/>
            </list>
        </property>
    </bean>

    <bean id="propertyWindow.setup" class="com.concurrentperformance.ringingmaster.fxui.desktop.setuppanel.PropertySetupWindow"
            init-method="init"/>

    <bean id="propertyWindow.notation" class="com.concurrentperformance.fxutils.box.InjectableVBox">
        <property name="boxLayoutDefinitions">
            <util:list>
                <bean class="com.concurrentperformance.fxutils.box.BoxLayoutDefinition" c:node-ref="propertyWindow.toolBar" c:priority="NEVER"/>
                <bean class="com.concurrentperformance.fxutils.box.BoxLayoutDefinition" c:node-ref="propertyWindow.notation.panel" c:priority="ALWAYS"/>
            </util:list>
        </property>
    </bean>

    <bean id="propertyWindow.toolBar" class="com.concurrentperformance.fxutils.toolbar.InjectableToolBar">
        <property name="toolBarElements">
            <util:list>
                <bean class="com.concurrentperformance.ringingmaster.fxui.desktop.notationpanel.AddNotationButton"/>
                <bean class="com.concurrentperformance.ringingmaster.fxui.desktop.notationpanel.DeleteNotationButton"
                        p:propertyNotationPanel-ref="propertyWindow.notation.panel"/>
                <ref bean="editNotationButton"/>
                <bean class="javafx.scene.control.Separator" p:orientation="VERTICAL"/>
                <ref bean="setActiveNotationButton"/>
            </util:list>
        </property>
    </bean>

    <bean id="editNotationButton" class="com.concurrentperformance.ringingmaster.fxui.desktop.notationpanel.EditNotationButton"
          p:propertyNotationPanel-ref="propertyWindow.notation.panel"/>
    <bean id="setActiveNotationButton" class="com.concurrentperformance.ringingmaster.fxui.desktop.notationpanel.SetActiveNotationButton"
          p:propertyNotationPanel-ref="propertyWindow.notation.panel"/>

    <bean id="propertyWindow.notation.panel" class="com.concurrentperformance.ringingmaster.fxui.desktop.notationpanel.PropertyNotationPanel"/>

</beans>
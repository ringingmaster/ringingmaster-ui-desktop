<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       default-autowire="byName"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">


    <bean id="toolBar" class="com.concurrentperformance.fxutils.toolbar.InjectableToolBar">
        <property name="definitions">
            <util:list>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.new"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.open"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.save"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionSeparator" c:orientation="VERTICAL"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.undo"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.redo"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionSeparator" c:orientation="VERTICAL"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.cut"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.copy"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.paste"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionSeparator" c:orientation="VERTICAL"/>
                <bean class="com.concurrentperformance.fxutils.toolbar.ToolbarDefinitionEvent" c:eventDefinition-ref="event.addNotation"/>
            </util:list>
        </property>
    </bean>


</beans>
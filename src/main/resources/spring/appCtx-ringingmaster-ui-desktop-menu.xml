<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
       default-autowire="byName"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd">


    <bean id="menuBar" class="com.concurrentperformance.fxutils.menu.InjectableMenuBar">
        <property name="menuBarElements">
            <list>
                <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionBranch"
                      c:menuDefinitions-ref="menu.file" c:name="File"/>
                <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionBranch"
                      c:menuDefinitions-ref="menu.edit" c:name="Edit"/>
                <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionBranch"
                      c:menuDefinitions-ref="menu.touch" c:name="Touch"/>
            </list>
        </property>
    </bean>


    <util:list id="menu.file" >
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.new"/>
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.open"/>
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.save"/>
    </util:list>

    <util:list id="menu.edit" >
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.undo"/>
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.redo"/>
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafSeparator"/>
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.cut"/>
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.copy"/>
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.paste"/>
    </util:list>

    <util:list id="menu.touch" >
        <bean class="com.concurrentperformance.fxutils.menu.MenuDefinitionLeafEvent" c:event-ref="event.addNotation"/>
    </util:list>
</beans>